// Install nodemon in dev
$ npm install nodemon --save-dev

// Package.json config for Nodemon
"scripts": {
	"dev": "nodemon server.js",
	"test": "echo \"Error: no test specified\" && exit 1"
	},

//Run dev with
$ npm run dev

//Get mongo DB
$ brew update
$ brew install mongodb

// Run MongoDB
$ sudo mongod
